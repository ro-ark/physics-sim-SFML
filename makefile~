SFML_PATH := $(HOME)/sfml_install

CXX      := g++
CXXFLAGS := -std=c++17 -Wall -I$(SFML_PATH)/include
LDFLAGS  := -L$(SFML_PATH)/lib -lsfml-graphics -lsfml-window -lsfml-system

TARGET   := sfml-app
SRC      := main.cpp

all: $(TARGET)

$(TARGET): $(SRC)
	$(CXX) $(SRC) -o $(TARGET) $(CXXFLAGS) $(LDFLAGS)

run: all
	export DYLD_LIBRARY_PATH=$(SFML_PATH)/lib:$$DYLD_LIBRARY_PATH && ./$(TARGET)

clean:
	rm -f $(TARGET)
